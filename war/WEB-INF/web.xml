<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

   <!-- Servlets -->
   <servlet>
      <servlet-name>inominaxServiceImpl</servlet-name>
      <servlet-class>zorglux.inominax.server.InominaxServiceImpl</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>inominaxServiceImpl</servlet-name>
      <url-pattern>/inominax/tokenSets</url-pattern>
   </servlet-mapping>

   <!-- Default page to serve -->
   <welcome-file-list>
      <welcome-file>inominax.html</welcome-file>
   </welcome-file-list>

</web-app>
